<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ardev.idroid.ui.settings.preference.IntListPreference
        app:key="theme"
        app:title="@string/theme"
        app:defaultValue="-1"
        app:entries="@array/entries_theme"
        app:entryValues="@array/values_theme" />

    <SwitchPreferenceCompat
        app:key="dynamic_theme"
        app:title="@string/dynamic_theme"
        app:summary="@string/dynamic_theme_desc"
        app:defaultValue="false"
        app:isPreferenceVisible="false" />

</PreferenceScreen>